<%- include('header.ejs') %>

<body>
    <%- include('sideBarMenu.ejs') %>

    <div id="main">
        <button class="btn btn-outline-dark openbtn" onclick="openNav()">&#9776; Menu</button>
        <div class="col-lg-9 mx-auto">
            <div class="row text-center">
                <h1 class="mx-auto">Nazwa zestawu ćwiczeń</h1>
            </div>
            

            <ol class="list-group list-group-numbered" style="color: aliceblue;">
                <% for(var i=0;i<names.length;i++){ %>
                    <li class="list-group-item bg-dark">
                        <div class="row">
                            <div class="col-lg-9 m-2 ml-4 mt-3" style="font-size: larger;">
                                <p><%= rep[i]+" x "+names[i] %></p>
                            </div>
                            <div class="col-lg-2">
                                <p class="text-end">
                                    <button class="btn btn-primary mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= i %>" aria-expanded="false" aria-controls="collapseExample">
                                        Opis ćwiczenia
                                    </button>
                                </p>
                            </div>
                                <div class="collapse" id="collapse<%= i %>">
                                <div class="card card-body bg-dark ml-5">
                                    <%= ex_desc[i] %>
                                </div>
                            </div>
                        </div>
                    </li>
                <% } %>
            </ol>

           <div class="row mx-auto">
               <a id='buttonStart' href="/home/sets/start?id=<%= set_id %>" class="btn btn-warning btn-lg mx-auto my-4" value="<%= set_id[i] %>">Rozpocznij</a>
            </div>
        </div>
        
        <script>
            var btn="<%= button %>"
            if (btn){
                document.getElementById('buttonStart').style.display=''
            }
            else{
                document.getElementById('buttonStart').style.display='none'
            }
        </script>
    </div>
    <%- include('footer.ejs') %>

</body>

</html>
<%- include('header.ejs') %>

<body>
    <%- include('sideBarMenu.ejs') %>

    <div id="main">
        <button class="btn btn-outline-dark openbtn" onclick="openNav()">&#9776; Menu</button>
        <div class="col-lg-9 mx-auto text-center p-4 bg-light" style="min-height: 800px;">
            <div class="row">
                <h1 id="setN" class="mx-auto"><%=setName%></h1>
            </div>
            <h5 id='series'>Liczba serii: <%=series%></h5>
            <h6>Naciśnij dane ćwiczenie, aby zobaczyć jego opis</h6>

            <div class="accordion accordion-flush bg-light" id="accordionFlushExample">
                <% for(var i=0;i<names.length;i++){ %>
                <div class="accordion-item">
                    
                        <h4 class="accordion-header" id="flush-headingOne">
                            <button class="accordion-button collapsed btn btn-secondary btn-lg text-wrap" style="width: 400px;"
                            type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= i %>"
                            aria-expanded="false" aria-controls="flush-collapseOne">
                                <%= rep[i]+names[i] %>
                        </button>
                    </h4>
            
                    <div id="collapse<%= i %>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                        data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body m-2" style="padding-left: 100px; padding-right:100px"> <%= ex_desc[i] %></div>
                    </div>
                </div>
                <% } %>
            </div>

            <div class="row mx-auto">
                <a id='buttonStart' href="/home/sets/start?id=<%= set_id %>" class="btn btn-warning btn-lg mx-auto my-4"
                    value="<%= set_id[i] %>">Rozpocznij</a>
            </div>
        </div>

        <script>
            if('<%=setName%>'== "Wszystkie ćwiczenia"){
                document.getElementById('series').style.display = "none"
                document.getElementById('buttonStart').style.display = "none"
            }
        </script>
    </div>
    <%- include('footer.ejs') %>

</body>

</html>
<%- include('header.ejs') %>

<body>
<div class="container-fluid" id="container_header">
    <h1>BStronger</h1>
  </div>
  <div class="container-fluid logPanel col-sm-4 mt-5 fixed-center">
    <div class=" mx-auto">
      <h2 class="py-3 text-center">Rejestracja</h2>
      <div class="alert alert-danger" role="alert"> <%= err_msg %></div> 
      <script type="text/javascript">
        $(document).ready(function () {
          const msg="<%= err_msg %>"
            if (msg != "") {
                $(".alert").text(msg);
                $(".alert").show();
            }
            else {
                $(".alert").hide();
            }
        });
        </script>
      <form method="post" action="/sign-up">
        <div class="form-group">
          <label for="InputNick2">Wybierz nick</label>
          <input name='user_name' type="text" class="form-control" id="InputNick2" aria-describedby="emailHelp" placeholder="MocnyJanusz76" required>
        </div>
        <div class="form-group">
          <label for="InputEmail2">Adres mailowy</label>
          <input name='email' type="email" class="form-control" id="InputEmail2" aria-describedby="emailHelp" placeholder="MocnyJanusz76@polsl.pl" required>
        </div>
        <div class="form-group">
          <label for="InputPassword2">Hasło</label>
          <input name='user_password' type="password" class="form-control" id="InputPassword2" placeholder="Hasło" required>
        </div>
        <div class="form-group">
          <label for="InputPassword3">Powtórz hasło</label>
          <input name='confirm_password' type="password" class="form-control" id="InputPassword3" placeholder="Hasło" required>
        </div>
        <div class="text-center">
          <a href="/register2"><button type="submit" class="btn btn-warning btn-lg">Przejdź dalej</button></a>
        </div>
      </form>
    </div>
  </div>

  <%- include('footer.ejs') %>
  </body>

</html>

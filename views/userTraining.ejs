<%- include('header.ejs') %>

<body>
    <%- include('sideBarMenu.ejs') %>

    <div id="main">
        <button class="btn btn-outline-dark openbtn mb-4" onclick="openNav()">&#9776; Menu</button>
        <div class="container-fluid"></div>
        <div class="col-lg-9 mx-auto text-center my-auto">
            <h1 class="mt-3" id="treningName"><%= texth1 %></h1>
            <div class="row text-center" id='karty'>
                <%for (var i=0;i<set_id.length ; i++) { %>
                <div class="card m-2 mx-auto" style="width: 23rem;">

                    <div class="card-body text-left">
                        <h5 class="card-title text-center"><%= set_name[i] %></h5>
                        <table class="table">
                            <tr>
                                <td> Autor:</td>
                                <td id='inputWeight'><span> <img src="<%= img[i] %>" style="width: 30px;">
                                        <%= set_author[i] %></span></td>
                            </tr>
                            <tr>
                                <td> Czas trwania treningu:</td>
                                <td id='inputWeight'><span><%= set_dur[i] %> </span></td>
                            </tr>
                            <tr>
                                <td> Spalone kalorie:</td>
                                <td id='inputAge'> <span><%= kcal[i] %> kcal</span></td>
                            </tr>
                            <tr>
                                <td>Opis:</td>
                                <td id='inputHeight'><span><%= set_desc[i] %></span></td>
                            </tr>
                        </table>
                        <div class="row text-center">

                            <a href="/home/sets/list?id=<%= set_id[i] %>" class="btn btn-warning mx-auto"
                                value="<%= set_id[i] %>">Zobacz ćwiczenia
                            </a>
                            
                            <div id="btns" class="mx-auto">
                                <button class="btn btn-outline-danger mx-auto">Usuń
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg>
                                </button>
                                <button class="btn btn-outline-dark mx-auto">Edytuj
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
                </div>

                <!--Info o tym że nie ma żandych "Twoich treningów"-->
                <div class="col-lg-8 bg-light mx-auto" style="display: block;" id='leniuszek'>
                    <div class="row text-center p-4">
                        <h4 class="mx-auto my-2" id="historyInfo" >Wygląda na to, że nie ma jeszcze utworzonych żadnych zestawów treningowych, aby dodać nowy przejdź do zakładki "Ułóż własny trening" i stwórz listę ćwiczeń dostosowaną do twoich potrzeb.</h4>
                    </div>
                    <div class="row">
                        <img src="/images/diff/lazy_mw.jpg" alt="userPhoto" class="img-fluid mx-auto" id="profile_photo" style="width: 400px; height: 400px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var div=document.getElementById("karty")
        if(div.firstElementChild)
            document.getElementById("leniuszek").style.display="none"
        
        else
        document.getElementById("leniuszek").style.display="block"

        /*Próbowałam napisac coś żeby dla każdej karty znikało ale nie wychodzi :(*/

        var btn = document.getElementById("btns")
        var header = document.getElementById("treningName")

        if(header.textContent == "Twoje zestawy treningowe"){
            btn.style.display = "block"
        }
        else
        btn.style.display = "none"


       
    </script>

  <%- include('footer.ejs') %>
</body>

</html>
<%- include('header.ejs') %>

<body>
    <%- include('sideBarMenu.ejs') %>

    <div id="main">
        <button class="btn btn-outline-dark openbtn mb-4" onclick="openNav()">&#9776; Menu</button>
        <div class="container-fluid"></div>
            <div class="col-lg-9 mx-auto text-center my-auto">
                <h1 class="mt-3"><%= texth1 %></h1>
                <div class="row text-center">
                    <%for (var i=0;i<set_id.length ; i++) { %>
                        <div class="card m-2 mx-auto" style="width: 23rem;">
                            
                                <div class="card-body text-left">
                                    <h5 class="card-title text-center"><%= set_name[i] %></h5>
                                    <table class="table">
                                        <tr>
                                            <td> Autor:</td>
                                            <td id='inputWeight'><span> <img src="<%= img[i] %>" style="width: 30px;"> <%= set_author[i] %></span></td>
                                        </tr>
                                        <tr>
                                            <td> Czas trwania treningu:</td>
                                            <td id='inputWeight'><span><%= set_dur[i] %> </span></td>
                                        </tr>
                                        <tr>
                                            <td> Spalone kalorie:</td>
                                            <td id='inputAge'> <span><%= kcal[i] %> kcal</span></td>
                                        </tr>
                                        <tr>
                                            <td>Opis:</td>
                                            <td id='inputHeight'><span><%= set_desc[i] %></span></td>
                                        </tr>
                                    </table>
                                    <div class="row text-center">

                                        <a href="/home/sets/list?id=<%= set_id[i] %>" class="btn btn-warning mx-auto" value="<%= set_id[i] %>">Zobacz ćwiczenia</a>
                                    </div>
                                </div>
                        </div>
                    <%}%>
                </div>
                <div class="col-lg-8 bg-light mx-auto" style="display: block;">
                    <div class="row text-center p-4">
                        <h4 class="mx-auto my-2" id="historyInfo" >Wygląda na to, że nie masz utworzonych żadnych zestawów treningowych, aby zobaczyć tutaj swoje zestawy przejdź do zakładki "Ułóż własny trening" i stwórz listę ćwiczeń dostosowaną do twoich potrzeb.</h4>
                    </div>
                    <div class="row">
                        <img src="/images/diff/lazy_mw.jpg" alt="userPhoto" class="img-fluid mx-auto" id="profile_photo" style="width: 400px; height: 400px;">
                    </div>
                </div>
            </div>
        </div>
    </div>

  <%- include('footer.ejs') %>
  </body>
</html>
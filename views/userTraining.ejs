                            <img src="/images/icons.jpg" class="card-img-top" alt="Ikony sportowe">
                            <div class="card-body">
                                <h5 class="card-title"><%= set_name[i] %></h5>
                            </div>
                            
                            <div class="card-body">
                                <a href="#" class="btn btn-warning" value="<%= set_id[i] %>">Zobacz ćwiczenia</a>

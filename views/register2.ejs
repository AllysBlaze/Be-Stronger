<%- include('header.ejs') %>

<body style="background-image: url(/images/cb2.png);">
<div id="container_header">
    <h1>BStronger</h1>
  </div>
  <div class="container-fluid logPanel col-sm-4 mt-5 p-3 fixed-center">
    <div class=" mx-auto">
      <h2 class="py-3 text-center">Podaj kilka dodatkowych informacji</h2>
      <div class="alert alert-danger" role="alert"> <%= err_msg %></div> <!-- TODO napisać skrypt, żeby się nie pojawiało jak puste-->
      <form method="post" action="/sign-up">
        <div class="row">
          <span>Wybierz płeć</span>
        </div>
        <div class="row">
          <div class="form-check m-3">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
            <label class="form-check-label" for="exampleRadios1">
              Kobieta
            </label>
          </div>
          <div class="form-check m-3">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
            <label class="form-check-label" for="exampleRadios2">
              Mężczyzna
            </label>
          </div>
          <div class="form-check m-3">
            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
            <label class="form-check-label" for="exampleRadios3">
              Inne
            </label>
          </div>
        </div>
        <div class="row">
          <div class="form-outline">
            <label class="form-label" for="age">Wiek</label>
            <input type="number" id="age" name="age" class="form-control" min=1 max=120/>
          </div>
        </div>
        <div class="row">
          <div class="form-outline">
            <label class="form-label" for="weight">Waga:</label>
            <input type="number" id="weight" name="weight" class="form-control" min="1" max="300">
          </div>
        </div>
        <div class="row">
          <div class="form-outline">
            <label class="form-label" for="weight">Wzrost(cm):</label>
            <input type="number" id="height" name="height" class="form-control" min="1" max="230">
          </div>
        </div>
        <div class="text-center">
          <a href="#"><button type="submit" class="btn btn-warning btn-lg">Zarejestruj</button></a>
        </div>
      </form>
    </div>
  </div>

  <%- include('footer.ejs') %>
  </body>

</html>
